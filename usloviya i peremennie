a = 0
def setup () :
    size(500,500)
    frameRate(1)
def draw () :
    global a
    a = random(0,2)
    a = round(a)
    print (a)
    if a==0 :
        fill(0,255,0)
        circle(255,255,random(0,500))
    elif a==1 :
        fill(0,0,255)
        rect(255,255,random(0,500),random(0,500))
    elif a==2 :
        fill(255,255,0)
        triangle(random(0,500),random(0,500),255,255,random(0,500),random(0,500))
    else :
        background(255,0,0)
        
